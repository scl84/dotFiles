let mapleader = ','
set nocompatible
colorscheme slate

syntax enable
set tabstop=4
set softtabstop=4
set expandtab

set number
set ruler
set showcmd
set cmdheight=1

filetype indent on
set wildmenu

set showmatch

set incsearch
set hlsearch
set ignorecase
set smartcase
set showmatch
nnoremap <leader><space> :nohlsearch<CR>


